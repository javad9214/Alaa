<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.example.alaa.Tools.Checkable_Card
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginTop="@dimen/Margin10"
            android:layout_gravity="center"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:card_text="Unselected"/>


        <com.example.alaa.Tools.Checkable_Card
            android:id="@+id/card_view_pressed"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginTop="@dimen/Margin10"
            android:layout_gravity="center"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:card_text="Pressed"/>


        <com.example.alaa.Tools.Checkable_Card
            android:id="@+id/card_view_checked"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginTop="@dimen/Margin10"
            android:layout_gravity="center"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:card_text="Checked"/>


    </LinearLayout>



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/Margin16"
        android:src="@drawable/ic_set_filter"/>

</androidx.constraintlayout.widget.ConstraintLayout>