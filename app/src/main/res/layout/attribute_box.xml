<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layoutDirection="rtl"
    app:cardBackgroundColor="@color/blue"
    app:cardCornerRadius="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.example.alaa.customViews.MyTextView
            android:id="@+id/tx_attribute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/colon"
            android:layout_margin="@dimen/Margin5"
            android:textColor="@color/pureWhite"
            android:text="@string/attr_sample"
            app:MyTextViewFont="IRANSans_Medium"/>


        <com.example.alaa.customViews.MyTextView
            android:id="@+id/colon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="@dimen/Margin5"
            android:textColor="@color/pureWhite"
            android:text="@string/colon"
            app:MyTextViewFont="IRANSans_Medium"/>


        <com.example.alaa.customViews.MyTextView
            android:id="@+id/tx_attr_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/colon"
            android:layout_margin="@dimen/Margin5"
            android:textColor="@color/pureWhite"
            android:text="@string/tx_attr_value_sample"
            app:MyTextViewFont="IRANSans_Medium"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>