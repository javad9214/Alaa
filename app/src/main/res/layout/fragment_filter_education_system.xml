<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Views.UI.SearchPage.Filter.FilterEducationSystem"
    android:background="@color/pureWhite">

    <HorizontalScrollView
        android:id="@+id/FilterPath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/Margin16"
        android:layout_marginTop="@dimen/Margin16"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/Margin10"
                android:layoutDirection="ltr"
                android:text="@string/EducationSystem"
                app:icon="@drawable/ic_chevron_left_black_24dp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/Margin10"
                android:layoutDirection="ltr"
                android:enabled="false"
                android:text="@string/Grade"
                app:icon="@drawable/ic_chevron_left_black_24dp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/Margin10"
                android:enabled="false"
                android:layoutDirection="ltr"
                android:text="@string/major"
                app:icon="@drawable/ic_chevron_left_black_24dp" />



            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/Margin10"
                android:layoutDirection="ltr"
                android:enabled="false"
                android:text="@string/Lesson"
                app:icon="@drawable/ic_chevron_left_black_24dp" />


            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/Margin10"
                android:layoutDirection="ltr"
                android:enabled="false"
                android:text="@string/teacher"
                app:icon="@drawable/ic_chevron_left_black_24dp" />

        </LinearLayout>


    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <com.example.alaa.Tools.SelectableCard
            android:id="@+id/card_newSystem"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/Margin10"
            android:foreground="?android:attr/selectableItemBackground"
            app:SelectableCard_text="@string/NewSystem"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="@dimen/Margin10"/>


        <com.example.alaa.Tools.SelectableCard
            android:id="@+id/card_oldSystem"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginTop="@dimen/Margin10"
            android:layout_gravity="center"
            android:foreground="?android:attr/selectableItemBackground"
            app:SelectableCard_text="@string/OldSystem"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="@dimen/Margin10"/>


    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/Margin16"
        app:backgroundTint="@color/green"
        android:src="@drawable/ic_done_filter"/>

</androidx.constraintlayout.widget.ConstraintLayout>