<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Views.UI.SearchPage.Filter.FilterEducationSystem"
    android:background="@color/pureWhite">


    <com.example.alaa.Views.UI.CustomViews.FilterNavigation
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/Margin16"
        app:layout_constraintTop_toTopOf="parent"
        app:NavCurrentStep="NavEducationSystem"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <com.example.alaa.Views.UI.CustomViews.SelectableCard
            android:id="@+id/card_newSystem"
            android:layout_width="250dp"
            android:layout_height="150dp"
            app:cardBackgroundColor="@color/alaa0"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/Margin10"
            android:foreground="?android:attr/selectableItemBackground"
            app:SelectableCard_text="@string/NewSystem"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="@dimen/Margin10"/>


        <com.example.alaa.Views.UI.CustomViews.SelectableCard
            android:id="@+id/card_oldSystem"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginTop="@dimen/Margin10"
            android:layout_gravity="center"
            android:foreground="?android:attr/selectableItemBackground"
            app:SelectableCard_text="@string/OldSystem"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="@dimen/Margin10"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>