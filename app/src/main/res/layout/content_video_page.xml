<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pureWhite"
        android:backgroundTint="@color/grayWhite"
        android:layoutDirection="rtl"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ScrollView
            android:id="@+id/scrollVideoPage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="50dp"
            android:fillViewport="true"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/chip_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_margin="16dp"
                    android:gravity="end"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:singleLine="true"
                        app:singleSelection="true">

                        <com.example.alaa.customViews.ChipWithFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/konkoor"
                            android:textColor="@color/pureWhite"
                            app:MyChipFont="IRANSans_Light"
                            app:chipBackgroundColor="@color/blue"
                            app:chipCornerRadius="7dp" />

                        <com.example.alaa.customViews.ChipWithFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/konkoor"
                            android:textColor="@color/pureWhite"
                            app:MyChipFont="IRANSans_Light"
                            app:chipBackgroundColor="@color/blue"
                            app:chipCornerRadius="7dp" />

                        <com.example.alaa.customViews.ChipWithFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/konkoor"
                            android:textColor="@color/pureWhite"
                            app:MyChipFont="IRANSans_Light"
                            app:chipBackgroundColor="@color/blue"
                            app:chipCornerRadius="7dp" />

                        <com.example.alaa.customViews.ChipWithFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/konkoor"
                            android:textColor="@color/pureWhite"
                            app:MyChipFont="IRANSans_Light"
                            app:chipBackgroundColor="@color/blue"
                            app:chipCornerRadius="7dp" />

                        <com.example.alaa.customViews.ChipWithFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/konkoor"
                            android:textColor="@color/pureWhite"
                            app:MyChipFont="IRANSans_Light"
                            app:chipBackgroundColor="@color/blue"
                            app:chipCornerRadius="7dp" />

                        <com.example.alaa.customViews.ChipWithFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/konkoor"
                            android:textColor="@color/pureWhite"
                            app:MyChipFont="IRANSans_Light"
                            app:chipBackgroundColor="@color/blue"
                            app:chipCornerRadius="7dp" />

                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>


                <com.example.alaa.customViews.ExtendedFloatingActionButtonWithFont
                    android:id="@+id/btn_downloadFromHere"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:onClick="goToDownloadBox"
                    android:text="@string/downloadFormHere"
                    android:textColor="@color/pureWhite"
                    app:MyExtendedButtonFont="IRANSans_Medium"
                    app:icon="@drawable/ic_cloud_download_black_24dp"
                    app:iconGravity="end"
                    app:iconTint="@color/pureWhite"
                    app:iconTintMode="src_in"
                    app:layout_constraintBottom_toTopOf="@id/card_txt_description"
                    app:layout_constraintEnd_toEndOf="@+id/card_txt_description"
                    app:layout_constraintTop_toTopOf="@id/card_txt_description" />


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_txt_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="@dimen/margin_30dp"
                    android:layout_marginEnd="@dimen/margin_10dp"
                    android:layout_marginBottom="10dp"
                    android:padding="@dimen/margin_10dp"
                    app:cardCornerRadius="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card_Video">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/linear_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_5dp"
                        android:orientation="vertical">


                        <com.example.alaa.customViews.ButtonWithFont
                            android:id="@+id/btn_continue"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_5dp"
                            android:layout_marginEnd="@dimen/margin_5dp"
                            android:text="@string/Continue"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            app:MyButtonFont="IRANSans_Medium"
                            app:backgroundTint="@color/grayWhite"
                            app:iconGravity="textStart"
                            app:iconTint="@color/blackTitle"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />


                        <com.example.alaa.customViews.TextViewWithFont
                            android:id="@+id/tx_teacherName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_10dp"
                            android:text="@string/demo_teacherName"
                            android:textSize="15sp"
                            app:MyTextViewFont="IRANSans_Medium"
                            app:layout_constraintBottom_toTopOf="@id/tx_set_title"
                            app:layout_constraintStart_toEndOf="@id/img_teacher_avatar"
                            app:layout_constraintTop_toTopOf="@id/img_teacher_avatar" />

                        <com.example.alaa.customViews.TextViewWithFont
                            android:id="@+id/tx_set_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_10dp"
                            android:text="@string/demo_set_title"
                            android:textColor="@color/blueDark"
                            app:MyTextViewFont="IRANSans_Light"
                            app:layout_constraintBottom_toBottomOf="@id/img_teacher_avatar"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/img_teacher_avatar"
                            app:layout_constraintTop_toBottomOf="@id/tx_teacherName" />


                        <com.example.alaa.customViews.TextViewWithFont
                            android:id="@+id/description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:ellipsize="end"
                            android:maxLines="5"
                            android:padding="@dimen/margin_10dp"
                            android:text="@string/description"
                            android:textColor="@color/gray"
                            android:textSize="16sp"
                            app:MyTextViewFont="IRANSans_Light_4.1"
                            app:animation_duration="750"
                            app:layout_constraintBottom_toTopOf="@id/btn_continue"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tx_set_title" />


                        <com.example.alaa.customViews.TextViewWithFont
                            android:id="@+id/title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_16dp"
                            android:layout_marginTop="35dp"
                            android:layout_marginBottom="@dimen/margin_10dp"
                            android:text="@string/demo_title_videoPage"
                            android:textColor="@color/purple"
                            app:MyTextViewFont="IranSansNumMedium"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_teacher_avatar"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="@dimen/margin_16dp"
                            android:src="@drawable/teacher_saniie"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/title" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/downloadBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_10dp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card_txt_description">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cons_quality_high"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_10dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <com.example.alaa.customViews.ButtonWithFont
                                android:id="@+id/btn_download_quality_high"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:text="@string/quality_high"
                                android:textColor="@color/pureWhite"
                                app:MyButtonFont="IRANSans_Bold"
                                app:backgroundTint="@color/alaa3"
                                app:icon="@drawable/ic_quality_high"
                                app:iconGravity="end"
                                app:iconTint="@color/pureWhite"
                                app:iconTintMode="multiply"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:strokeColor="@color/black" />

                            <com.example.alaa.customViews.TextViewWithFont
                                android:id="@+id/quality_size_high"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/downloadSize"
                                app:MyTextViewFont="IRANSans_Light"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <com.example.alaa.customViews.TextViewWithFont
                                android:id="@+id/tx_quality_size_high"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_5dp"
                                android:text="@string/demo_highSize"
                                app:MyTextViewFont="IranSansNumMedium"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@id/quality_size_high"
                                app:layout_constraintTop_toTopOf="parent" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cons_quality_good"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_10dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/cons_quality_high">

                            <com.example.alaa.customViews.ButtonWithFont
                                android:id="@+id/btn_download_quality_good"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:text="@string/quality_good"
                                android:textColor="@color/pureWhite"
                                app:MyButtonFont="IRANSans_Bold"
                                app:backgroundTint="@color/alaa3"
                                app:icon="@drawable/ic_quality_good"
                                app:iconGravity="end"
                                app:iconTint="@color/pureWhite"
                                app:iconTintMode="multiply"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:strokeColor="@color/black" />

                            <com.example.alaa.customViews.TextViewWithFont
                                android:id="@+id/tx_quality_size_good"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_5dp"
                                android:text="@string/demo_goodSize"
                                app:MyTextViewFont="IranSansNumMedium"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@id/quality_size_good"
                                app:layout_constraintTop_toTopOf="parent" />

                            <com.example.alaa.customViews.TextViewWithFont
                                android:id="@+id/quality_size_good"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/downloadSize"
                                app:MyTextViewFont="IRANSans_Light"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cons_quality_medium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_10dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/cons_quality_good">

                            <com.example.alaa.customViews.ButtonWithFont
                                android:id="@+id/btn_download_quality_medium"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:text="@string/quality_medium"
                                android:textColor="@color/pureWhite"
                                app:MyButtonFont="IRANSans_Medium"
                                app:backgroundTint="@color/alaa3"
                                app:icon="@drawable/ic_quality_medium"
                                app:iconGravity="end"
                                app:iconTint="@color/pureWhite"
                                app:iconTintMode="multiply"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:strokeColor="@color/black" />

                            <com.example.alaa.customViews.TextViewWithFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_5dp"
                                android:text="@string/demo_mediumSize"
                                app:MyTextViewFont="IranSansNumMedium"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@id/tx_quality_size_medium"
                                app:layout_constraintTop_toTopOf="parent" />

                            <com.example.alaa.customViews.TextViewWithFont
                                android:id="@+id/tx_quality_size_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/downloadSize"
                                app:MyTextViewFont="IRANSans_Light"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_relatedProduct"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_10dp"
                    app:layout_constraintBottom_toTopOf="@id/chip_tags"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/downloadBox">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/margin_5dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_relatedProduct"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_15dp"
                            app:layout_constraintTop_toBottomOf="@id/header_relatedProduct" />

                        <com.example.alaa.customViews.HeaderWithLine
                            android:id="@+id/header_relatedProduct"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:header_text="محصولات مرتبط"
                            app:header_textColor="@color/black"
                            app:header_textFont="IRANSans_Medium"
                            app:header_textSize="6sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_Video"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="@dimen/margin_10dp"
                    android:layout_marginBottom="@dimen/margin_10dp"
                    android:padding="@dimen/margin_10dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="@dimen/card_dimen"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/dum04"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_play_button"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_share_black_24dp"
                    android:tintMode="src_in"
                    app:backgroundTint="@color/pureWhite"
                    app:fabSize="mini"
                    app:layout_constraintBottom_toTopOf="@id/card_txt_description"
                    app:layout_constraintStart_toStartOf="@id/card_txt_description"
                    app:layout_constraintTop_toTopOf="@id/card_txt_description" />


                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_bookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClickBookmark"
                    android:src="@drawable/ic_bookmark_border_black_24dp"
                    android:tintMode="src_in"
                    app:backgroundTint="@color/pureWhite"
                    app:fabSize="mini"
                    app:layout_constraintBottom_toTopOf="@id/card_txt_description"
                    app:layout_constraintStart_toEndOf="@id/btn_share"
                    app:layout_constraintTop_toTopOf="@id/card_txt_description" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <data>

    </data>
</layout>