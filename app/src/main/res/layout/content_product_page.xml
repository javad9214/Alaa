<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ScrollView
        android:id="@+id/scrollProduct"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/finalPriceDialog"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <HorizontalScrollView
                android:id="@+id/chips_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/Margin5"
                android:layout_marginTop="@dimen/Margin5"
                android:layout_marginEnd="@dimen/Margin5"
                android:layout_marginBottom="@dimen/Margin5"
                android:layoutDirection="ltr"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.chip.ChipGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleLine="true"
                    app:singleSelection="true">

                    <com.example.alaa.customViews.MyChip
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layoutDirection="ltr"
                        android:text="ریاضی تجربی کنکور نظام قدیم"
                        app:chipBackgroundColor="@color/pureWhite"
                        app:chipStrokeColor="@color/black"
                        app:chipStrokeWidth="1dp"
                        app:MyChipFont="IRANSans_Light"/>

                    <com.example.alaa.customViews.MyChip
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layoutDirection="ltr"
                        android:text="محصولات آموزشی"
                        app:chipBackgroundColor="@color/pureWhite"
                        app:chipIcon="@drawable/ic_chevron_left_black_24dp"
                        app:chipStrokeColor="@color/black"
                        app:chipStrokeWidth="1dp"
                        app:MyChipFont="IRANSans_Light"/>

                    <com.example.alaa.customViews.MyChip
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layoutDirection="ltr"
                        android:text="@string/title_home"
                        app:chipBackgroundColor="@color/pureWhite"
                        app:chipIcon="@drawable/ic_chevron_left_black_24dp"
                        app:chipStrokeColor="@color/black"
                        app:chipStrokeWidth="1dp"
                        app:MyChipFont="IRANSans_Light"/>


                </com.google.android.material.chip.ChipGroup>

            </HorizontalScrollView>


            <com.example.alaa.views.ui.ProductPage.Components.MainProduct_Component
                android:id="@+id/mainProduct"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/Margin10"
                app:RealPrice="97600"
                app:Title="@string/demoTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/chips_map"
                app:salePrice="24300" />

            <LinearLayout
                android:id="@+id/linear_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/mainProduct">

                <com.example.alaa.customViews.MyButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:onClick="Onclick_Attribute"
                    android:text="@string/features"
                    app:MyButtonFont="IRANSans_Light"
                    app:backgroundTint="@color/redAttribute"
                    app:icon="@drawable/ic_features" />


                <com.example.alaa.customViews.MyButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:onClick="SamplePhotoOnClick"
                    android:text="@string/sampleBooklet"
                    app:MyButtonFont="IRANSans_Light"
                    app:backgroundTint="@color/SampleVideoGreen"
                    app:icon="@drawable/ic_sample_file" />

                <com.example.alaa.customViews.MyButton
                    android:id="@+id/describe_product"
                    style="@style/AppTheme"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:onClick="ScrollToDescription"
                    android:text="@string/studyProduct"
                    app:MyButtonFont="IRANSans_Light"
                    app:backgroundTint="@color/blue"
                    app:icon="@drawable/ic_study" />


            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/introVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="@dimen/Margin10"
                android:layout_marginBottom="@dimen/Margin10"
                android:padding="@dimen/Margin10"
                app:cardCornerRadius="5dp"
                app:cardElevation="@dimen/card_dimen"
                app:layout_constraintTop_toBottomOf="@id/linear_buttons">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/intro_default"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_play_button"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_txDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="@dimen/Margin10"
                android:layout_marginBottom="10dp"
                android:padding="@dimen/Margin10"
                app:cardCornerRadius="5dp"
                app:cardElevation="@dimen/card_dimen"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/introVideo">


                <LinearLayout
                    android:id="@+id/linear_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.example.alaa.customViews.MyTextView
                        android:id="@+id/Description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ellipsize="end"
                        android:maxLines="5"
                        android:padding="@dimen/Margin10"
                        android:text="@string/description"
                        android:textColor="@color/gray"
                        android:textSize="16sp"
                        app:MyTextViewFont="IRANSans_Light_4.1"
                        app:animation_duration="750" />


                    <com.example.alaa.customViews.MyButton
                        android:id="@+id/btn_continue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/Margin5"
                        android:layout_marginEnd="@dimen/Margin5"
                        android:text="@string/Continue"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:MyButtonFont="IRANSans_Medium"
                        app:backgroundTint="@color/grayWhite"
                        app:iconGravity="textStart"
                        app:iconTint="@color/blackTitle" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_sample_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="@dimen/card_dimen"
                app:layout_constraintTop_toBottomOf="@id/card_txDescription">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/RedLight"
                        app:cardCornerRadius="2dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.example.alaa.customViews.MyTextView
                            android:id="@+id/salePrice"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/Margin10"
                            android:layout_marginEnd="@dimen/Margin10"
                            android:gravity="center"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:text="@string/sample_videos"
                            android:textColor="@color/pureWhite"
                            android:textSize="14sp"
                            app:MyTextViewFont="IRANSans_Medium" />


                    </com.google.android.material.card.MaterialCardView>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_sample_videos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                    </androidx.recyclerview.widget.RecyclerView>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


    <com.example.alaa.views.ui.ProductPage.Components.TotalPriceComponent
        android:id="@+id/finalPriceDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:elevation="@dimen/card_dimen"
        app:finalRealPrice="148000"
        app:finalSalePrice="98000"
        app:isDiscounted="true"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>