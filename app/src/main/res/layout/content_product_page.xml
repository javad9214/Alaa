<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/finalPriceLayout"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/Margin10"
                android:layout_marginBottom="@dimen/Margin10"
                app:cardCornerRadius="@dimen/box_corner_radius">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/product_image"
                    android:scaleType="fitXY"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:src="@drawable/dum05" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/Margin16"
                android:orientation="horizontal">


                <com.google.android.material.button.MaterialButton
                    style="@style/AppTheme"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:text="@string/studyProduct"
                    app:backgroundTint="@color/blue"
                    app:icon="@drawable/ic_check_product" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:text="@string/sampleBooklet"
                    app:backgroundTint="@color/green"
                    app:icon="@drawable/ic_sample_file" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:text="@string/features"
                    app:backgroundTint="@color/colorAccent"
                    app:icon="@drawable/ic_features" />

            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/Margin10"
                app:cardCornerRadius="@dimen/box_corner_radius">

                <com.example.alaa.CustomViews.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_discount_persent"
                    android:paddingStart="@dimen/Margin10"
                    android:paddingEnd="@dimen/Margin10"
                    android:text="تخفیف  40 %"
                    android:textColor="@color/blackTitle"
                    android:textSize="12sp"
                    android:visibility="visible"
                    app:txtFont="estedad" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_margin="@dimen/Margin5" />

                    </RelativeLayout>


                    <com.example.alaa.CustomViews.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/Margin10"
                        android:gravity="start"
                        android:text="همایش های طلایی ریاضی تجربی کنکور آقای امینی راد"
                        android:textColor="@color/blackTitle"
                        android:textSize="14sp"
                        app:txtFont="IRANSans_Bold" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/Margin5">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">


                            <com.example.alaa.CustomViews.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/Margin10"
                                android:layout_marginEnd="@dimen/Margin5"
                                android:gravity="center"
                                android:text="@string/Toman"
                                android:textColor="@color/colorAccent"
                                android:textSize="12sp"
                                app:txtFont="estedad" />

                            <com.example.alaa.CustomViews.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/Margin10"
                                android:background="@drawable/bg_price"
                                android:gravity="center"
                                android:paddingStart="@dimen/Margin16"
                                android:paddingEnd="@dimen/Margin16"
                                android:text="29,400"
                                android:textColor="@color/pureWhite"
                                android:textSize="18sp"
                                app:txtFont="estedad" />

                            <com.example.alaa.CustomViews.MyTextView
                                android:id="@+id/realPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5dp"
                                android:gravity="center"
                                android:text="(49,000)"
                                android:textColor="@color/colorAccent"
                                android:textSize="16sp"
                                app:txtFont="estedad" />


                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/Margin10"
                            android:text="@string/introduction_video"
                            app:backgroundTint="@color/purple"
                            app:icon="@drawable/ic_ondemand_video_24dp"
                            app:iconSize="18dp" />


                    </RelativeLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical">


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_margin="@dimen/Margin10">

                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:singleLine="true"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ریاضی تجربی کنکور نظام قدیم"
                            app:chipBackgroundColor="@color/pureWhite"
                            app:chipStrokeColor="@color/black"
                            app:chipStrokeWidth="1dp" />

                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="محصولات آموزشی"
                            app:chipBackgroundColor="@color/pureWhite"
                            app:chipIcon="@drawable/ic_chevron_left_black_24dp"
                            app:chipStrokeColor="@color/black"
                            app:chipStrokeWidth="1dp" />

                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/title_home"
                            app:chipBackgroundColor="@color/pureWhite"
                            app:chipIcon="@drawable/ic_chevron_left_black_24dp"
                            app:chipStrokeColor="@color/black"
                            app:chipStrokeWidth="1dp" />

                    </com.google.android.material.chip.ChipGroup>

                </HorizontalScrollView>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


    <androidx.cardview.widget.CardView
        android:id="@+id/finalPriceLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/alaa5"
        android:padding="@dimen/Margin10"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="@string/buy"
                app:backgroundTint="@color/darkGreen"
                app:iconTint="@color/pureWhite"
                android:textColor="@color/pureWhite"
                app:icon="@drawable/ic_product_nav"
                app:iconSize="18dp" />


            <com.example.alaa.CustomViews.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:layout_marginEnd="@dimen/Margin5"
                android:layout_marginStart="@dimen/Margin10"
                android:gravity="center"
                android:textStyle="bold"
                android:text="64,200 تومان"
                android:textColor="@color/pureWhite"
                android:textSize="24sp"
                app:txtFont= "shabnam_light" />

            <com.example.alaa.CustomViews.MyTextView
                android:id="@+id/realFinalPrice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/Margin5"
                android:gravity="center"
                android:text="(49,000)"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                app:txtFont="shabnam_light" />

            <com.example.alaa.CustomViews.MyTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/Margin10"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/finalPrice"
                android:textColor="@color/blackTitle"
                android:textSize="14sp"
                app:txtFont="IRANSans_Bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>