<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_chiBekhonm"
        android:layout_width="170dp"
        android:layout_height="220dp"
        android:src="@drawable/riazi_tajrobi_jaame_test_kheili_sabz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.alaa.customViews.TextViewWithFont
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5dp"
        android:gravity="center"
        android:text="@string/demo_title_chiBekhonm"
        app:MyTextViewFont="IRANSans_Light"
        app:layout_constraintEnd_toEndOf="@id/img_chiBekhonm"
        app:layout_constraintStart_toStartOf="@id/img_chiBekhonm"
        app:layout_constraintTop_toBottomOf="@id/img_chiBekhonm" />

</androidx.constraintlayout.widget.ConstraintLayout>